$ start-all.sh
$ cd IST3134
$ mkdir pig-tutorial-master
$ cd /home/hadoop/IST3134/pig-tutorial-master/
$ pig -x local -d error
grunt> traffic = LOAD '/home/hadoop/IST3134/traffic.csv' USING PigStorage(',') AS 
(ID:int, SPEED: double, TRAVEL_TIME: double, STATUS: chararray, DATA_AS_OF: Date, LINK_ID: int, LINK_POINTS: chararray, OWNER: chararray, TRANSCOM_ID: chararray, BOROUGH: chararray, LINK_NAME: chararray);
grunt> limited_traffic = LIMIT traffic 20;
grunt> DUMP limited_traffic;
grunt> DUMP traffic;
gunrt > threshold = LOAD 'traffic.csv' USING PigStorage(',') AS (traffic_speed: double, traffic_travel_time: double);

threshold_speed = 50;  -- Example threshold for speed
threshold_travel_time = 100;  -- Example threshold for travel time

grunt> anomalies = FILTER traffic BY (SPEED > threshold_speed) OR (TRAVEL_TIME > threshold_travel_time);
grunt> DUMP anomalies;
grunt> STORE anomalies INTO 'anomalies' USING PigStorage(',');

